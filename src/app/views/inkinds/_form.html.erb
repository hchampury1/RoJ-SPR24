<%= form_with(model: inkind, local: true) do |form| %>
  <% if inkind.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inkind.errors.count, "error") %> prohibited this inkind from being saved:</h2>

      <ul>
        <% inkind.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.text_field :user, value: current_user.email, type: :hidden%>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select(:genre, options_for_select([["discount", "discount"], ["facility", "facility"], ["service", "service"]])) %> 
  </div>

  <div class="field">
    <%= form.label :donor %>
    <%= form.text_field :donor_name %>
  </div>

  <div class="field">
    <%= form.text_field :donor_id, type: :hidden%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
