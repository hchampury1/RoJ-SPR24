<!-- 
# Project name: AMSTR (ACCR Management System Tracker)
# Description: Pro-Bono Tracker for ACCR to oversee work done on several cases
# Filename: index.html.erb
# Description: Displays statistical data to the user
# Last modified on: 4/13/22
-->

<div class="container">
  <h1>Statistics </h1>
  <div class="position-absolute w-100"></div>
  <main class="main-content position-relative border-radius-lg ">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card stretch-card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-12">
                  <div class="numbers">
                  <!-- FIRST 4 CARDS AT THE TOP -->
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Value of Work</p>
                    <h5 class="font-weight-bolder">
                    <!-- Calculates user's value in work this month -->
                      <%= number_to_currency(calculate_user_total_fees) %>
                    </h5>
                    <p class="mb-0">
                    <!-- This will display the text as green or red depending on if there was an increase -->
                      <% if calculate_month_change_fees.chr.eql? "+" %>
                      <span class="text-success text-sm font-weight-bolder"><%= calculate_month_change_fees %>% </span>
                      <% else %>
                      <span class="text-danger text-sm font-weight-bolder"><%= calculate_month_change_fees %>% </span>
                      <% end %>
                      since last month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card stretch-card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-12">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Entries This Month</p>
                    <h5 class="font-weight-bolder">
                    <!-- Calculates user's number of entries this month -->
                      <%= calculate_user_num_entries %>
                    </h5>
                    <p class="mb-0">
                    <!-- This will display the text as green or red depending on if there was an increase -->
                      <% if calculate_month_change_entries.chr.eql? "+" %>
                      <span class="text-success text-sm font-weight-bolder"><%= calculate_month_change_entries %>% </span>
                      <% else %>
                      <span class="text-danger text-sm font-weight-bolder"><%= calculate_month_change_entries %>% </span>
                      <% end %>
                      since last month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card stretch-card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-12">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Projects Involved In</p>
                    <h5 class="font-weight-bolder">
                    <!-- Calculates user's number of projects contributed to this month -->
                      <%= calculate_projects_contributed %>
                    </h5>
                    <p class="mb-0">
                    <!-- This will display the text as green or red depending on if there was an increase -->
                      <% if calculate_month_change_projects.chr.eql? "+" %>
                      <span class="text-success text-sm font-weight-bolder"><%= calculate_month_change_projects %>% </span>
                      <% else %>
                      <span class="text-danger text-sm font-weight-bolder"><%= calculate_month_change_projects %>% </span>
                      <% end %>
                      since last month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                    <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6">
          <div class="card stretch-card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-12">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold w-100">Total ACCR Work</p>
                    <h5 class="font-weight-bolder">
                    <!-- Calculates total value in work ACCR has done this month -->
                      <%= number_to_currency(calculate_all_fees) %>
                    </h5>
                    <p class="mb-0">
                    <!-- This will display the text as green or red depending on if there was an increase -->
                      <% if calculate_month_change_fees_all.chr.eql? "+" %>
                      <span class="text-success text-sm font-weight-bolder"><%= calculate_month_change_fees_all %>% </span>
                      <% else %>
                      <span class="text-danger text-sm font-weight-bolder"><%= calculate_month_change_fees_all %>% </span>
                      <% end %>
                      since last month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                    <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
<!-- MONETARY VALUE BY PROJECTS SECTION -->      
      <div class="row mt-4">
        <div class="col-lg-7 mb-lg-0 mb-4">
          <div class="card ">
            <div class="card-header pb-0 p-3">
              <div class="d-flex justify-content-between">
                <h6 class="mb-2">Monetary Value by Projects</h6>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center ">
                <tbody>
                <!-- If user hasn't entered any data, display default data-->
                <% if @categories.empty? %>
                  <tr>
                    <td>
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0"> Project:</p>
                          <h6 class="text-sm mb-0">N/A</h6>
                        </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Quantity:</p>
                        <h6 class="text-sm mb-0">0</h6>
                      </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Value:</p>
                        <h6 class="text-sm mb-0"> $0 </h6>
                      </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Percentage:</p>
                        <h6 class="text-sm mb-0">0%</h6>
                      </div>
                    </td>
                  </tr>
                <% else %>
                <!-- Display top 3 categories by fees total from user -->                
                  <% @categories.each do |cat| %>
                  <tr>
                    <td>
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0"> Project:</p>
                          <h6 class="text-sm mb-0"><%= get_cat_name(cat) %></h6>
                        </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Quantity:</p>
                        <h6 class="text-sm mb-0"><%= get_cat_quant(cat) %></h6>
                      </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Value:</p>
                        <h6 class="text-sm mb-0"><%= number_to_currency(get_cat_fees(cat)) %></h6>
                      </div>
                    </td>
                    <td>
                      <div class="text-center">
                        <p class="text-xs font-weight-bold mb-0">Percentage:</p>
                        <h6 class="text-sm mb-0"><%= get_cat_percentage(cat) %>%</h6>
                      </div>
                    </td>
                  </tr>
                  <% end %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- CATEGORY BREAKDOWN SECTION -->
        <div class="col-lg-5">
          <div class="card">
            <div class="card-header pb-0 p-3">
              <h6 class="mb-2">Category Breakdown</h6>
            </div>
            <div class="card-body p-3">
              <ul class="list-group">
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                      <i class="ni ni-mobile-button text-white opacity-10"></i>
                    </div>
                    <div class="d-flex flex-column">
                    <!-- Display hours for consulting made by user in ACCR total -->
                      <h6 class="mb-1 text-dark text-sm">Consulting</h6>
                      <span class="text-xs"><span class="text-xs font-weight-bold">+ <%= calculate_consultation %></span> hours total </span>
                    </div>
                  </div>
                  <div class="d-flex">
                    <button class="btn btn-link btn-icon-only btn-rounded btn-sm text-dark icon-move-right my-auto"><i class="ni ni-bold-right" aria-hidden="true"></i></button>
                  </div>
                </li>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                      <i class="ni ni-box-2 text-white opacity-10"></i>
                    </div>
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">Training</h6>
                      <!-- Display hours for training made by user in ACCR total -->
                      <span class="text-xs"><span class="text-xs font-weight-bold">+ <%= calculate_training %></span> hours total</span>
                    </div>
                  </div>
                  <div class="d-flex">
                    <button class="btn btn-link btn-icon-only btn-rounded btn-sm text-dark icon-move-right my-auto"><i class="ni ni-bold-right" aria-hidden="true"></i></button>
                  </div>
                </li>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                      <i class="ni ni-satisfied text-white opacity-10"></i>
                    </div>
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">Representation</h6>
                      <!-- Display hours for representation made by user in ACCR total -->
                      <span class="text-xs"><span class="text-xs font-weight-bold">+ <%= calculate_representation %></span> hours total</span>
                    </div>
                  </div>
                  <div class="d-flex">
                    <button class="btn btn-link btn-icon-only btn-rounded btn-sm text-dark icon-move-right my-auto"><i class="ni ni-bold-right" aria-hidden="true"></i></button>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
